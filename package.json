{
  "name": "iot-devkit",
  "version": "1.0.0-20251219-1621",
  "description": "IoT DevKit - 物联网开发工具箱，支持 MQTT 设备模拟和时间戳转换等",
  "homepage": "https://gogs.baizhiedu.xin/chenyn/mqtt-electron-simulator",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcblr1993/iot-devkit.git"
  },
  "main": "src/main/index.js",
  "author": {
    "name": "yannan.chen",
    "email": "chenyn6185@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "prebuild": "node scripts/update-version-timestamp.js",
    "build": "electron-builder",
    "prebuild:mac": "node scripts/update-version-timestamp.js",
    "build:mac": "electron-builder --mac",
    "prebuild:win": "node scripts/update-version-timestamp.js",
    "build:win": "electron-builder --win",
    "prebuild:linux": "node scripts/update-version-timestamp.js",
    "build:linux": "electron-builder --linux",
    "prebuild:all": "node scripts/update-version-timestamp.js",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "mqtt": "^5.13.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "9H0o93zkxj047QoMwp",
    "productName": "IoT DevKit",
    "copyright": "Copyright © 2025 ${author}",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "resources/**/*"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      "icon": "resources/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "IoT DevKit"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icons/icon.png",
      "maintainer": "yannan.chen <chenyn@zparkhr.com.cn>"
    }
  }
}