{
  "name": "mqtt-electron-simulator",
  "version": "1.0.0",
  "description": "一个用于模拟多设备发送MQTT数据的Electron应用",
  "main": "src/main/index.js",
  "author": "yannan.chen",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "mqtt": "^5.13.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "9H0o93zkxj047QoMwp",
    "productName": "MQTT设备模拟器",
    "copyright": "Copyright © 2025 ${author}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "resources/**/*"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      },
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icons/icon.png"
    }
  }
}